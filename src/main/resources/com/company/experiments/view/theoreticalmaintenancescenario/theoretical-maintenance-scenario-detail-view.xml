<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://theoreticalMaintenanceScenarioDetailView.title"
      focusComponent="form">
    <data>
        <instance id="theoreticalMaintenanceScenarioDc"
                  class="com.company.experiments.entity.TheoreticalMaintenanceScenario">
            <fetchPlan extends="_base">
                <property name="infrastructureNode" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="theoreticalMaintenanceScenarioDc">
            <textField id="scenarioNameField" property="scenarioName" colspan="2"/>
            <textField id="scenarioCodeField" property="scenarioCode"/>
            <entityPicker id="infrastructureNodeField" property="infrastructureNode">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <comboBox id="maintenanceTypeField" property="maintenanceType"/>
            <textField id="estimatedDurationField" property="estimatedDuration"/>
            <textArea id="requiredSkillsField" property="requiredSkills" colspan="2" height="6em"/>
            <bigDecimalField id="estimatedCostField" property="estimatedCost"/>
            <comboBox id="frequencyField" property="frequency"/>
            <textField id="priorityField" property="priority"/>
            <textArea id="safetyRequirementsField" property="safetyRequirements" colspan="2" height="8em"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
