<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://tacticalPlanListView.title"
      focusComponent="tacticalPlanDataGrid">
    <data>
        <collection id="tacticalPlanDc"
                    class="com.company.experiments.entity.TacticalPlan">
            <fetchPlan extends="_base">
                <property name="planningScenario" fetchPlan="_instance_name"/>
                <property name="maintenanceScenario" fetchPlan="_instance_name"/>
                <property name="assignedTeam" fetchPlan="_instance_name"/>
                <property name="assignedEmployees" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="tacticalPlanDl" readOnly="true">
                <query>
                    <![CDATA[select e from TacticalPlan e order by e.plannedStartDate desc, e.planName]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="tacticalPlanDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="tacticalPlanDataGrid.create"/>
            <button id="editButton" action="tacticalPlanDataGrid.edit"/>
            <button id="removeButton" action="tacticalPlanDataGrid.remove"/>
            <button id="ganttViewButton" text="Gantt View" icon="CALENDAR"/>
            <simplePagination id="pagination" dataLoader="tacticalPlanDl"/>
        </hbox>
        <dataGrid id="tacticalPlanDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="tacticalPlanDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="planName"/>
                <column property="maintenanceScenario"/>
                <column property="plannedStartDate"/>
                <column property="plannedEndDate"/>
                <column property="assignedTeam"/>
                <column property="budgetAllocated"/>
                <column property="status"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
