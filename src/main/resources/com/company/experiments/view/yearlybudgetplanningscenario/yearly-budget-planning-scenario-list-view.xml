<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://yearlyBudgetPlanningScenarioListView.title"
      focusComponent="yearlyBudgetPlanningScenarioDataGrid">
    <data>
        <collection id="yearlyBudgetPlanningScenarioDc"
                    class="com.company.experiments.entity.YearlyBudgetPlanningScenario">
            <fetchPlan extends="_base">
                <property name="createdBy" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="yearlyBudgetPlanningScenarioDl" readOnly="true">
                <query>
                    <![CDATA[select e from YearlyBudgetPlanningScenario e order by e.year desc, e.scenarioName]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="yearlyBudgetPlanningScenarioDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="yearlyBudgetPlanningScenarioDataGrid.create"/>
            <button id="editButton" action="yearlyBudgetPlanningScenarioDataGrid.edit"/>
            <button id="removeButton" action="yearlyBudgetPlanningScenarioDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="yearlyBudgetPlanningScenarioDl"/>
        </hbox>
        <dataGrid id="yearlyBudgetPlanningScenarioDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="yearlyBudgetPlanningScenarioDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="scenarioName"/>
                <column property="year"/>
                <column property="status"/>
                <column property="totalBudget"/>
                <column property="optimizationTarget"/>
                <column property="createdBy"/>
                <column property="createdAt"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
