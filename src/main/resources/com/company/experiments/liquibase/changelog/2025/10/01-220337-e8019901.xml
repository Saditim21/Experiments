<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Experiments">
        <createTable tableName="SCENARIO_COMPARISON">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SCENARIO_COMPARISON"/>
            </column>
            <column name="COMPARISON_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="BASELINE_SCENARIO_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="COMPARISON_METRICS" type="CLOB"/>
            <column name="CREATED_AT" type="DATETIME"/>
            <column name="CREATED_BY_ID" type="UUID"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Experiments">
        <createTable tableName="SCENARIO_COMPARISON_ALTERNATIVE_LINK">
            <column name="SCENARIO_COMPARISON_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SCENARIO_COMPARISON_ALTERNATIVE_LINK"/>
            </column>
            <column name="YEARLY_BUDGET_PLANNING_SCENARIO_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SCENARIO_COMPARISON_ALTERNATIVE_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Experiments">
        <createTable tableName="SCENARIO_METRICS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SCENARIO_METRICS"/>
            </column>
            <column name="SCENARIO_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="METRIC_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="METRIC_VALUE" type="DECIMAL(19, 2)"/>
            <column name="CALCULATED_AT" type="DATETIME"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Experiments">
        <addForeignKeyConstraint baseColumnNames="SCENARIO_COMPARISON_ID"
                                 baseTableName="SCENARIO_COMPARISON_ALTERNATIVE_LINK"
                                 constraintName="FK_SCECOMALT_ON_SCENARIO_COMPARISON" referencedColumnNames="ID"
                                 referencedTableName="SCENARIO_COMPARISON"/>
    </changeSet>
    <changeSet id="5" author="Experiments">
        <addForeignKeyConstraint baseColumnNames="YEARLY_BUDGET_PLANNING_SCENARIO_ID"
                                 baseTableName="SCENARIO_COMPARISON_ALTERNATIVE_LINK"
                                 constraintName="FK_SCECOMALT_ON_YEARLY_BUDGET_PLANNING_SCENARIO"
                                 referencedColumnNames="ID" referencedTableName="YEARLY_BUDGET_PLANNING_SCENARIO"/>
    </changeSet>
    <changeSet id="6" author="Experiments">
        <addForeignKeyConstraint baseColumnNames="BASELINE_SCENARIO_ID" baseTableName="SCENARIO_COMPARISON"
                                 constraintName="FK_SCENARIO_COMPARISON_ON_BASELINE_SCENARIO" referencedColumnNames="ID"
                                 referencedTableName="YEARLY_BUDGET_PLANNING_SCENARIO"/>
    </changeSet>
    <changeSet id="7" author="Experiments">
        <addForeignKeyConstraint baseColumnNames="CREATED_BY_ID" baseTableName="SCENARIO_COMPARISON"
                                 constraintName="FK_SCENARIO_COMPARISON_ON_CREATED_BY" referencedColumnNames="ID"
                                 referencedTableName="EMPLOYEE"/>
    </changeSet>
    <changeSet id="8" author="Experiments">
        <addForeignKeyConstraint baseColumnNames="SCENARIO_ID" baseTableName="SCENARIO_METRICS"
                                 constraintName="FK_SCENARIO_METRICS_ON_SCENARIO" referencedColumnNames="ID"
                                 referencedTableName="YEARLY_BUDGET_PLANNING_SCENARIO"/>
    </changeSet>
</databaseChangeLog>