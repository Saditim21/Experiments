<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://employeeListView.title"
      focusComponent="employeesDataGrid">
    <data>
        <collection id="employeesDc"
                    class="com.company.experiments.entity.Employee">
            <fetchPlan extends="_base">
                <property name="team" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="employeesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Employee e order by e.lastName, e.firstName]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="employeesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="employeesDataGrid.create"/>
            <button id="editButton" action="employeesDataGrid.edit"/>
            <button id="removeButton" action="employeesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="employeesDl"/>
        </hbox>
        <dataGrid id="employeesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="employeesDc">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="employeeCode"/>
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="email"/>
                <column property="phone"/>
                <column property="team"/>
                <column property="role"/>
                <column property="hireDate"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
